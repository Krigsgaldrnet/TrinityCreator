<Window x:Class="TrinityCreator.Shared.UI.DbcConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrinityCreator.Shared.DBC"
        mc:Ignorable="d"
        Title="DBC Configuration" Height="300" Width="500">
    <StackPanel Margin="10">
        <Label Content="World of Warcraft directory or DBC directory" />
        <DockPanel>
            <Button Content="Select" Name="selectBtn" DockPanel.Dock="Right" Width="75" Click="selectBtn_Click"/>
            <TextBox Name="dbcDirTxt"/>
        </DockPanel>
        <Button Content="Save" Name="saveBtn" IsDefault="True" Margin="0,10" Click="saveBtn_Click" />
        <TextBlock Name="infoTxt" />
    </StackPanel>
</Window>
